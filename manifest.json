{
  "manifest_version": 3,
  "name": "DRP Mouse",
  "version": "1.0",
  "description": "See other users' cursors as emojis in real-time",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "dist/background.bundle.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["dist/content.bundle.js"]
  }],
  "web_accessible_resources": [{
    "resources": [
      "popup/*",
      "dist/*"
    ],
    "matches": ["<all_urls>"]
  }]
}
